<div class="container mt-3">
  <h3><%= @task.title %></h3>

  <p><%= @task.details %></p>
  <p>
    <% if @task.completed %>
      <i class="fas fa-check"></i> This task is completed
    <% else %>
      <i class="far fa-square"></i> This task is not yet completed
    <% end %>
  </p>

  <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary" %>

  <p class="mt-3"><i class="fas fa-undo"></i> <%= link_to "Back to list", tasks_path %></p>
</div>
