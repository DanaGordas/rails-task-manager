<h2><%= @task.title %></h2>

<p><%= @task.details %></p>
<p>
  <% if @task.completed %>
    ✅  This task is completed
  <% else %>
    ❎  This task is not yet completed
  <% end %>
</p>

<%= link_to "Edit", edit_task_path(@task) %>
<br>
<br>
<%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>
<br>
<br>
<%= link_to "Back to list", tasks_path %>
